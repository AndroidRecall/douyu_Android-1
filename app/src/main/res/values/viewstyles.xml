<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--底部导航栏字体样式-->
    <style name="TextAppearance_Home_Bottom_Navigation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/common_accent_middlegray_textcolor</item>
    </style>

    <!--标题栏标题样式-->
    <style name="ToolBarCustomChild.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">140dp</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <!--标题栏图标样式-->
    <style name="ToolBarCustomChild" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorMiddleGray</item>
    </style>


    <style name="ToolBarCustomChild.Right">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>
    <style name="ToolBarCustomChild.Left">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_gravity">center_vertical|start</item>
    </style>

    <style name="ItemBody">
        <item name="android:textColor">@color/common_light_middlegray_textcolor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>