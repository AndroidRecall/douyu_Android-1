<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/xxh_dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xxh_dp_200"
        tools:src="@color/colorBtnBlue"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="@dimen/xxh_dp_16"
        android:layout_height="@dimen/xxh_dp_16"
        android:src="@drawable/tiktok_star_normal"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/xxh_dp_4"
        android:layout_marginBottom="@dimen/xxh_dp_10"
        app:layout_constraintStart_toStartOf="@+id/iv_bg"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg"/>
    <TextView
        android:id="@+id/tv_like_num"
        app:layout_constraintStart_toEndOf="@+id/iv_like"
        app:layout_constraintTop_toTopOf="@+id/iv_like"
        app:layout_constraintBottom_toBottomOf="@+id/iv_like"
        android:text="0"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/xxh_dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/iv_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_bg"
        android:layout_marginTop="@dimen/xxh_dp_4"
        tools:text="名字"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/xxh_dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>