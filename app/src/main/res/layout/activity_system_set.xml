<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar_simple" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_60"
        android:layout_marginTop="@dimen/xxh_dp_5"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/xxh_dp_17"
        android:text="语言设置"
        android:textColor="#ff282929"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_17"
        android:text="简体中文"
        android:textColor="#ff959797"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_60"
        android:layout_marginTop="@dimen/xxh_dp_1"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/xxh_dp_17"
        android:text="官方邮箱"
        android:textColor="#ff282929"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_17"
        android:textColor="#ff959797"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        app:layout_constraintEnd_toStartOf="@id/tv_copy"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <TextView
        android:id="@+id/tv_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_17"
        android:background="@drawable/mine_copy_bg"
        android:paddingStart="@dimen/xxh_dp_15"
        android:paddingTop="@dimen/xxh_dp_8"
        android:paddingEnd="@dimen/xxh_dp_15"
        android:paddingBottom="@dimen/xxh_dp_8"
        android:text="复制"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_60"
        android:layout_marginTop="@dimen/xxh_dp_1"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/xxh_dp_17"
        android:text="清理缓存"
        android:textColor="#ff282929"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2" />

    <TextView
        android:id="@+id/tv_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_17"
        android:text="0KB"
        android:textColor="#ff959797"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_60"
        android:layout_marginTop="@dimen/xxh_dp_1"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/xxh_dp_17"
        android:text="版本号"
        android:textColor="#ff282929"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_17"
        android:text="v1.0.0"
        android:textColor="#ff959797"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/tv4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv4" />

    <TextView
        android:id="@+id/tv_login_out"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_60"
        android:layout_marginTop="@dimen/xxh_dp_20"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="@dimen/xxh_dp_17"
        android:text="退出登录"
        android:textColor="#ffe22e2f"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv4" />

</androidx.constraintlayout.widget.ConstraintLayout>