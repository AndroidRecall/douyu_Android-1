<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibReturn"
        android:layout_width="@dimen/xxh_dp_30"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/indicator2"
        app:layout_constraintBottom_toBottomOf="@+id/indicator2"
        android:scaleType="center"
        android:background="@null"
        android:layout_marginStart="@dimen/xxh_dp_15"
        android:tint="@color/white"
        android:backgroundTint="@color/white"
        android:src="@mipmap/return_back" />
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/indicator2"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/ibReturn"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_search"
        />
    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:padding="@dimen/xxh_dp_6"
        app:layout_constraintTop_toTopOf="@+id/indicator2"
        app:layout_constraintBottom_toBottomOf="@+id/indicator2"
        app:layout_constraintEnd_toStartOf="@+id/tv_publish"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:padding="@dimen/xxh_dp_6"
        app:layout_constraintTop_toTopOf="@+id/indicator2"
        app:layout_constraintBottom_toBottomOf="@+id/indicator2"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>