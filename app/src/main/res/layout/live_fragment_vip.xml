<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_bottom"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="@dimen/xxh_dp_100"
                android:layout_height="@dimen/xxh_dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/xxh_dp_20"
                android:src="@mipmap/icon_vip_huang_small"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/xxh_dp_10"
                android:text="咪乐贵族·侯爵"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_status"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl_bottom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/open_vip_bg"
      app:layout_constraintBottom_toBottomOf="parent">
      <TextView
          android:id="@+id/tv_open_desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          tools:text="开通帝皇首月:1000000咪豆"
          android:layout_marginTop="@dimen/xxh_dp_10"
          android:textSize="@dimen/xxh_sp_16"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="@dimen/xxh_dp_10"/>
      <TextView
          android:id="@+id/tv_renew_desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:text="续费只需21000咪豆/月"
          android:textSize="@dimen/xxh_sp_12"
          android:layout_marginTop="@dimen/xxh_dp_6"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_open_desc"
          android:layout_marginStart="@dimen/xxh_dp_10"/>
      <TextView
          android:id="@+id/tv_residue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:text="咪豆余额:0"
          android:textSize="@dimen/xxh_sp_12"
          android:layout_marginTop="@dimen/xxh_dp_6"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_renew_desc"
          android:layout_marginStart="@dimen/xxh_dp_10"/>
      <TextView
          android:id="@+id/tv_open_person"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:text="由主播xxx为您开通"
          android:textSize="@dimen/xxh_dp_10"
          android:layout_marginTop="@dimen/xxh_dp_6"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_residue"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="@dimen/xxh_dp_10"
          android:layout_marginStart="@dimen/xxh_dp_10"/>
      <TextView
          android:id="@+id/tv_open"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:text="立即开通"
          android:paddingTop="@dimen/xxh_dp_2"
          android:paddingBottom="@dimen/xxh_dp_2"
          android:paddingStart="@dimen/xxh_dp_10"
          android:paddingEnd="@dimen/xxh_dp_10"
          android:textSize="@dimen/xxh_dp_10"
          android:layout_marginTop="@dimen/xxh_dp_6"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginEnd="@dimen/xxh_dp_10"
          android:background="@drawable/btn_open_vip_bg"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>