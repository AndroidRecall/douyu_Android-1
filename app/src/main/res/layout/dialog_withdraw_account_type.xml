<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/xxh_dp_10"
    android:orientation="vertical">
    <TextView
        android:text="选择添加账户类型"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/xxh_dp_16"
        android:textSize="@dimen/xxh_sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_bank"
        android:text="银行卡"
        android:gravity="center"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:layout_marginTop="@dimen/xxh_dp_20"
        android:paddingTop="@dimen/xxh_dp_8"
        android:paddingBottom="@dimen/xxh_dp_8"
        android:textSize="@dimen/xxh_sp_14"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_alipay"
        android:text="支付宝"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="@dimen/xxh_dp_8"
        android:paddingBottom="@dimen/xxh_dp_8"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:textSize="@dimen/xxh_sp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>