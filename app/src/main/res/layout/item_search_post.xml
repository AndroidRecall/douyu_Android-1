<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.swbg.mlivestreaming.view.AllRoundImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/xxh_dp_36"
        android:layout_height="@dimen/xxh_dp_36"
        android:layout_marginStart="@dimen/xxh_dp_12"
        android:layout_marginTop="@dimen/xxh_dp_18"
        android:src="@mipmap/default_avatar"
        app:imageCorn="@dimen/xxh_dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:text="用户名子"
        android:textColor="#ff202121"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <TextView
        android:id="@+id/tv_click_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_12"
        android:background="@drawable/search_invitation"
        android:paddingStart="@dimen/xxh_dp_17"
        android:paddingTop="@dimen/xxh_dp_8"
        android:paddingEnd="@dimen/xxh_dp_17"
        android:paddingBottom="@dimen/xxh_dp_8"
        android:text="关注"
        android:textColor="#ff4fabe7"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_avatar" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:text="用户发帖"
        android:textColor="#ff202121"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:background="@drawable/search_invitation_sign"
        android:drawableStart="@mipmap/search_comment"
        android:paddingStart="@dimen/xxh_dp_7"
        android:paddingTop="@dimen/xxh_dp_5"
        android:paddingEnd="@dimen/xxh_dp_7"
        android:paddingBottom="@dimen/xxh_dp_5"
        android:text="小黄文"
        android:textColor="#ff4fabe7"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_13"
        android:text="12分钟前"
        android:textColor="#ffafb0b7"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_sign"
        app:layout_constraintTop_toBottomOf="@id/tv_sign" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/xxh_dp_18"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#F4F5F6"
        app:layout_constraintStart_toStartOf="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />


</androidx.constraintlayout.widget.ConstraintLayout>