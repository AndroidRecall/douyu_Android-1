<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cl_root_1"
    android:background="?android:selectableItemBackground"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v1"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_7"
        android:background="@color/colorWindowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_18"
        android:src="@mipmap/mine_self_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <com.mp.douyu.view.AllRoundImageView
        android:id="@+id/self_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/xxh_dp_9"
        android:layout_marginBottom="@dimen/xxh_dp_9"
        android:layout_marginEnd="@dimen/xxh_dp_5"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_avatar"
        app:imageCorn="@dimen/xxh_dp_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv1"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_goneMarginEnd="@dimen/xxh_dp_9" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xxh_dp_5"
        android:src="@mipmap/mine_take_photo"
        app:layout_constraintBottom_toBottomOf="@id/self_avatar"
        app:layout_constraintRight_toRightOf="@id/self_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_18"
        android:text="头像"
        android:textColor="#ff282929"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/self_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/self_avatar" />
</androidx.constraintlayout.widget.ConstraintLayout>