<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_commend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_14"
        android:layout_marginTop="@dimen/xxh_dp_17"
        android:text="评论 "
        android:textColor="#ff070809"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_6"
        android:scaleType="centerCrop"
        android:src="@mipmap/player_chose_bg"
        app:layout_constraintEnd_toEndOf="@id/tv_commend_count"
        app:layout_constraintStart_toStartOf="@id/tv_commend_count"
        app:layout_constraintTop_toBottomOf="@id/tv_commend_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_click_time_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xxh_dp_14"
        android:drawableEnd="@mipmap/player_sort"
        android:drawablePadding="@dimen/xxh_dp_6"
        android:text="按时间升序"
        android:textColor="#ff9ba0a7"
        android:textSize="@dimen/xxh_sp_11"
        app:layout_constraintBottom_toBottomOf="@id/tv_commend_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_commend_count" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_commend_count" />

</androidx.constraintlayout.widget.ConstraintLayout>