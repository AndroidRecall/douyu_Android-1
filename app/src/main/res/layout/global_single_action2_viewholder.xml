<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iftStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/txtActionMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5"
        android:textColor="@color/colorMiddleGray"/>

    <TextView
        android:id="@+id/txtActionMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorMiddleGray"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/txtAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iftStatus" />

    <Button
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:elevation="@dimen/max_item_card_elevation"
        android:minHeight="32dp"
        android:background="@drawable/common_white_button_bg"
        android:textSize="12sp"
        android:textColor="@color/colorDarkGray"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtActionMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>