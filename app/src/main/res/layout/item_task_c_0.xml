<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_15"
        android:layout_marginTop="@dimen/xxh_dp_80"
        android:layout_marginEnd="@dimen/xxh_dp_15"
        android:background="@mipmap/task_c_sign_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_13"
            android:paddingEnd="@dimen/xxh_dp_18"
            android:paddingBottom="@dimen/xxh_dp_5"
            android:paddingTop="@dimen/xxh_dp_5"
            android:paddingStart="@dimen/xxh_dp_18"
            android:text="@string/sign_in_title"
            android:background="@drawable/drawable_btn_sign_bg"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="@dimen/xxh_dp_5" />

        <TextView
            android:id="@+id/tv_mi_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xxh_dp_80"
            android:layout_marginTop="@dimen/xxh_dp_74"
            android:text="0"
            android:textColor="#fff97e51"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/xxh_dp_50"
            android:layout_marginTop="@dimen/xxh_dp_70"
            android:background="#FEF5ED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mi_day_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_74"
            android:layout_marginEnd="@dimen/xxh_dp_80"
            android:text="0"
            android:textColor="#fff97e51"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_10"
            android:text="@string/balance"
            android:textColor="#ff999a9b"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_mi_bean"
            app:layout_constraintStart_toStartOf="@id/tv_mi_bean"
            app:layout_constraintTop_toBottomOf="@id/tv_mi_bean" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_10"
            android:text="连续签到天数"
            android:textColor="#ff999a9b"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_mi_day_n"
            app:layout_constraintStart_toStartOf="@id/tv_mi_day_n"
            app:layout_constraintTop_toBottomOf="@id/tv_mi_day_n" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/xxh_dp_1"
            android:background="#fffef5ed"
            app:layout_constraintEnd_toEndOf="@id/ll_day"
            app:layout_constraintStart_toStartOf="@id/ll_day"
            app:layout_constraintTop_toTopOf="@id/ll_day"
            app:layout_constraintBottom_toBottomOf="@id/ll_day"
            />

        <LinearLayout
            android:id="@+id/ll_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xxh_dp_30"
            android:layout_marginTop="@dimen/xxh_dp_22"
            android:layout_marginEnd="@dimen/xxh_dp_30"
            android:layout_marginBottom="@dimen/xxh_dp_22"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv1">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_click_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_30"
            android:background="@drawable/drawable_btn_sign_bg"
            android:paddingStart="@dimen/xxh_dp_45"
            android:paddingTop="@dimen/xxh_dp_6"
            android:paddingEnd="@dimen/xxh_dp_45"
            android:paddingBottom="@dimen/xxh_dp_6"
            android:text="签到"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_day" />

        <View
            android:id="@+id/v1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_click_sign" />

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xxh_dp_25"
            android:layout_marginTop="111dp"
            android:layout_marginEnd="@dimen/xxh_dp_25"
            app:layout_constraintEnd_toStartOf="@id/v1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_click_sign">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="画质"
                android:textColor="#fffe7c4d"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/xxh_dp_17" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="次数"
                android:textColor="#fffe7c4d"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xxh_dp_25"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="@dimen/xxh_dp_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/v1"
            app:layout_constraintTop_toBottomOf="@id/tv_click_sign">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="画质"
                android:textColor="#fffe7c4d"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/xxh_dp_17" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="次数"
                android:textColor="#fffe7c4d"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xxh_dp_25"
            android:layout_marginTop="@dimen/xxh_dp_2"
            android:layout_marginEnd="@dimen/xxh_dp_25"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/v1"
            app:layout_constraintTop_toBottomOf="@id/ll6">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_watching_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xxh_dp_25"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/xxh_dp_25"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/v1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll5">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:text="标清 360P"
                android:textColor="#ff98999a"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/xxh_dp_6"
                android:background="#F9F5F0" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/permission_dp_35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_play_num" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>