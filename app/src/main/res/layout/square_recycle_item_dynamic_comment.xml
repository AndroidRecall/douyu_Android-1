<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/xxh_dp_20"
        android:layout_height="@dimen/xxh_dp_20"
        android:layout_marginTop="@dimen/xxh_dp_20"
        android:layout_marginStart="@dimen/xxh_dp_20"
        android:layout_marginEnd="@dimen/xxh_dp_20"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:textSize="@dimen/xxh_sp_12"
        android:text="哈哈"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-4-2 10:25:10"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginTop="@dimen/xxh_dp_2"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="@+id/tv_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_comment_num"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/xxh_dp_10"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/xxh_sp_12"
        android:layout_marginEnd="@dimen/xxh_dp_8"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="invisible"
        android:drawableTop="@mipmap/ic_box_comment_false"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/tv_like_num"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        app:layout_constraintEnd_toStartOf="@+id/tv_like_num"/>
    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="invisible"
        android:drawableTop="@mipmap/ic_box_like_false"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/xxh_dp_6"/>
</androidx.constraintlayout.widget.ConstraintLayout>