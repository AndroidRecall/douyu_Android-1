<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/xxh_dp_50"
        android:layout_height="@dimen/xxh_dp_50"
        android:layout_marginTop="@dimen/xxh_dp_20"
        android:layout_marginStart="@dimen/xxh_dp_20"
        android:layout_marginEnd="@dimen/xxh_dp_20"
        android:src="@mipmap/default_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        android:layout_marginStart="@dimen/xxh_dp_10"
        tools:text="咪乐官方"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_follow_num"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        android:background="@drawable/btn_gradient_201f1f_border_white_bg_layer"
        android:paddingTop="@dimen/xxh_dp_4"
        android:paddingBottom="@dimen/xxh_dp_4"
        android:paddingStart="@dimen/xxh_dp_10"
        android:paddingEnd="@dimen/xxh_dp_10"
        android:gravity="center"
        android:textColor="@color/color_4688FF"
        tools:text="已关注"
        android:layout_width="@dimen/xxh_dp_70"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar"
        app:layout_constraintEnd_toStartOf="@+id/tv_follow_num"

        android:ellipsize="end"
        android:layout_marginTop="@dimen/xxh_dp_10"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintStart_toStartOf="@+id/tv_content"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        android:background="@drawable/btn_follow_bg"
        android:paddingTop="@dimen/xxh_dp_2"
        android:paddingBottom="@dimen/xxh_dp_2"
        android:paddingStart="@dimen/xxh_dp_10"
        android:paddingEnd="@dimen/xxh_dp_10"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:visibility="gone"
        android:textColor="@android:color/holo_blue_light"
        android:drawableStart="@mipmap/icon_circle_post"
        android:drawablePadding="@dimen/xxh_dp_2"
        android:gravity="center_vertical"
        tools:text="咪乐资讯"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_label">
        <com.mp.douyu.view.gridview.NineGridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <cn.jzvd.JzvdStd
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/xxh_dp_10"
            android:visibility="gone"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.mp.douyu.view.VerticalRecyclerView
        android:id="@+id/recycle_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxh_dp_10"
        app:layout_constraintTop_toBottomOf="@+id/cl_media"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-4-2 10:25:10"
        app:layout_constraintStart_toStartOf="@+id/cl_media"
        app:layout_constraintTop_toTopOf="@+id/tv_like_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_like_num"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:drawableStart="@mipmap/ic_box_comment_false"
        android:drawablePadding="@dimen/xxh_dp_2"
        app:layout_constraintTop_toTopOf="@+id/tv_like_num"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        app:layout_constraintEnd_toStartOf="@+id/tv_like_num"/>
    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:drawableStart="@mipmap/ic_box_like_false"
        android:drawablePadding="@dimen/xxh_dp_2"
        app:layout_constraintTop_toBottomOf="@+id/recycle_comment"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/xxh_dp_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xxh_dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        android:background="@color/colorCharacterGrayHint"/>
</androidx.constraintlayout.widget.ConstraintLayout>