<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_bar_simple" />
<LinearLayout
    android:id="@+id/ll_apply"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title_bar"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_apply_anchor"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/xxh_dp_200"
                android:layout_marginStart="@dimen/xxh_dp_10"
                android:layout_marginEnd="@dimen/xxh_dp_10"
                android:background="@drawable/btn_white_t80_c10_bg">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxh_dp_20"
                    >
                    <TextView
                        android:id="@+id/tv_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/xxh_dp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="姓名"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入姓名"
                        android:background="@null"
                        android:gravity="end"

                        android:textSize="@dimen/xxh_sp_12"
                        android:layout_marginEnd="@dimen/xxh_dp_10"
                        app:layout_constraintStart_toEndOf="@+id/tv_name_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/black"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxh_dp_20">
                    <TextView
                        android:id="@+id/tv_phone_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="@dimen/xxh_dp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_phone_title"
                        android:textColor="@color/colorRedHint"/>
                    <TextView
                        android:id="@+id/tv_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/tv_phone_flag"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="手机号码"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入11位手机号"
                        android:layout_marginEnd="@dimen/xxh_dp_10"
                        android:background="@null"
                        android:gravity="end"
                        android:textSize="@dimen/xxh_sp_12"
                        app:layout_constraintStart_toEndOf="@+id/tv_phone_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/black"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxh_dp_20">

                <TextView
                        android:id="@+id/tv_wx_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="@dimen/xxh_dp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_wx_title"
                        android:textColor="@color/colorRedHint"/>
                    <TextView
                        android:id="@+id/tv_wx_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/tv_wx_flag"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="qq"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/et_wx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入真实qq号"
                        android:background="@null"
                        android:gravity="end"
                        android:textSize="@dimen/xxh_sp_12"
                        android:layout_marginEnd="@dimen/xxh_dp_10"
                        app:layout_constraintStart_toEndOf="@+id/tv_wx_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/black"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxh_dp_20"
                    android:layout_marginBottom="@dimen/xxh_dp_20">

                <TextView
                        android:id="@+id/tv_email_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/xxh_dp_16"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="邮箱"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入邮箱地址"
                        android:layout_marginEnd="@dimen/xxh_dp_10"
                        android:background="@null"
                        android:gravity="end"
                        android:textSize="@dimen/xxh_sp_12"
                        app:layout_constraintStart_toEndOf="@+id/tv_email_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/black"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="@dimen/xxh_sp_16"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/xxh_dp_10"
                android:layout_marginBottom="@dimen/xxh_dp_10"
                app:layout_constraintStart_toStartOf="@+id/ll_info"
                app:layout_constraintTop_toBottomOf="@+id/ll_info"/>
            <LinearLayout
                android:id="@+id/ll_remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xxh_dp_150"
                app:layout_constraintTop_toBottomOf="@+id/tv_remark"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/xxh_dp_10"
                android:layout_marginEnd="@dimen/xxh_dp_10"
                android:background="@drawable/btn_white_t80_c10_bg">
                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/xxh_dp_10"
                    android:layout_marginEnd="@dimen/xxh_dp_10"
                    android:layout_marginTop="@dimen/xxh_dp_10"
                    android:padding="@dimen/xxh_dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xxh_sp_14"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="留下你想对我们说的"
                    android:maxLength="300"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_remark_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/300"
                    android:textSize="@dimen/xxh_sp_10"
                    android:layout_marginTop="@dimen/xxh_dp_4"
                    android:layout_marginBottom="@dimen/xxh_dp_10"
                    android:layout_marginEnd="@dimen/xxh_dp_10"
                    android:layout_gravity="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="提交申请"
                android:gravity="center"
                android:paddingTop="@dimen/xxh_dp_10"
                android:paddingBottom="@dimen/xxh_dp_10"
                android:layout_marginTop="@dimen/xxh_dp_20"
                android:layout_marginBottom="@dimen/xxh_dp_10"
                android:textSize="@dimen/xxh_sp_16"
                android:textColor="@color/colorRedPink"
                android:background="@drawable/btn_white_c30_bg"
                app:layout_constraintStart_toStartOf="@+id/ll_remark"
                app:layout_constraintEnd_toEndOf="@+id/ll_remark"
                app:layout_constraintTop_toBottomOf="@+id/ll_remark"
                app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_50"
            android:layout_gravity="center"
            android:src="@mipmap/ic_checking"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_10"
            android:textSize="@dimen/xxh_sp_12"
            android:gravity="center"
            android:text="审核中..."/>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxh_dp_20"
            android:gravity="center"
            android:text="我们将在24小时内人工处理您的申请，请您耐心等待."/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>