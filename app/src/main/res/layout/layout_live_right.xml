<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_recharge"
        android:layout_width="@dimen/xxh_dp_40"
        android:layout_height="@dimen/xxh_dp_40"
        android:src="@mipmap/btn_live_charge_enable"/>
    <ImageView
        android:id="@+id/iv_yp"
        android:layout_width="@dimen/xxh_dp_40"
        android:layout_height="@dimen/xxh_dp_40"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:src="@mipmap/icon_live_tcyp"/>
    <ImageView
        android:id="@+id/iv_right_share"
        android:layout_width="@dimen/xxh_dp_40"
        android:layout_height="@dimen/xxh_dp_40"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:src="@mipmap/ic_live_share"/>
    <ImageView
        android:id="@+id/iv_bet"
        android:layout_width="@dimen/xxh_dp_40"
        android:layout_height="@dimen/xxh_dp_40"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:src="@mipmap/ic_tab_yabo"/>
</LinearLayout>