<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.swbg.mlivestreaming.view.AllRoundImageView
        android:id="@+id/iv_video"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_180"
        android:layout_marginTop="@dimen/xxh_dp_5"
        android:layout_marginStart="@dimen/xxh_dp_6"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_video_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/xxh_dp_30"
        android:background="@drawable/recommended_item_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/xxh_dp_10"
        android:paddingRight="@dimen/xxh_dp_10"
        android:text="视频标题视频标题视频标题视频标题"
        android:textColor="@color/colorCharacterBlack"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/xxh_sp_14"
        app:layout_constraintStart_toStartOf="@id/iv_video"
        app:layout_constraintBottom_toBottomOf="@id/iv_video" />

</androidx.constraintlayout.widget.ConstraintLayout>