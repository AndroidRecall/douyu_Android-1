<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/xxh_dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/xxh_dp_80"
        android:layout_height="@dimen/xxh_dp_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_default_header"
        />
    <TextView
        android:id="@+id/tv_power_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xxh_sp_14"
        android:textColor="@color/black"
        android:text="专属坐骑"
        android:layout_marginTop="@dimen/xxh_dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon"/>
    <TextView
        android:id="@+id/tv_power_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xxh_sp_12"
        android:text="麒麟异兽，踏云而来"
        android:layout_marginTop="@dimen/xxh_dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_power_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>