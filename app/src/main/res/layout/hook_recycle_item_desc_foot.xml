<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/xxh_dp_10"
    android:background="@drawable/btn_gray1_c10_bg">

    <TextView
        android:id="@+id/tv_desc_foot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:text="温馨提示"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desc_foot_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        android:layout_marginTop="@dimen/xxh_dp_20"
        android:text="内容内容内容内容内容内容内容内容内容内容内容"
        android:textSize="@dimen/xxh_sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_foot_title"
        android:paddingBottom="@dimen/xxh_dp_10"/>
</androidx.constraintlayout.widget.ConstraintLayout>