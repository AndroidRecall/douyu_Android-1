<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/xxh_dp_5"
    android:layout_marginBottom="@dimen/xxh_dp_5"
    android:background="@drawable/shape_white_radius"
    android:paddingTop="@dimen/xxh_dp_10"
    android:paddingBottom="@dimen/xxh_dp_10">
    <View
        android:id="@+id/title_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/xxh_dp_2"
        android:layout_height="@dimen/xxh_dp_20"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:background="@color/colorBtnBlue"/>
    <TextView
        android:id="@+id/tv_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第8期 中奖记录"
        android:textColor="@android:color/black"
        android:textSize="@dimen/xxh_sp_16"
        android:layout_marginStart="@dimen/xxh_dp_10"
        app:layout_constraintStart_toEndOf="@+id/title_line"
        app:layout_constraintTop_toTopOf="@+id/title_line"
        app:layout_constraintBottom_toBottomOf="@+id/title_line"/>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_line"
        android:layout_marginTop="@dimen/xxh_dp_5"
        android:layout_marginBottom="@dimen/xxh_dp_5"
        android:id="@+id/cl_content"
        android:background="@drawable/btn_gradient_201f1f_border_purple_bg_layer"
        android:paddingTop="@dimen/xxh_dp_10"
        android:paddingBottom="@dimen/xxh_dp_10">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/xxh_dp_50"
            android:layout_height="@dimen/xxh_dp_50"
            android:layout_marginStart="@dimen/xxh_dp_50"
            android:src="@mipmap/default_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/xxh_dp_30"
            android:layout_height="@dimen/xxh_dp_30"
            android:src="@mipmap/icon_one_yuan_hat"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            android:layout_marginBottom="@dimen/xxh_dp_22"
            app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
            android:layout_marginEnd="@dimen/xxh_dp_35"
            />
    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toStartOf="@+id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        android:src="@mipmap/icon_one_yuan_cloud1"/>
        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar"
            android:src="@mipmap/icon_one_yuan_cloud2"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xxh_sp_12"
            android:textColor="@color/gradient_start"
            android:text="用户昵称:xxxx"
            android:layout_marginTop="@dimen/xxh_dp_20"
            android:layout_marginStart="@dimen/xxh_dp_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xxh_sp_12"
            android:textColor="@color/gradient_start"
            android:text="开奖时间:2021-5-1 20:10:02"
            android:layout_marginTop="@dimen/xxh_dp_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toStartOf="@+id/tv_nickname"/>
        <TextView
            android:id="@+id/tv_luck_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/xxh_sp_12"
            android:textColor="@color/gradient_start"
            android:text="幸运号码:0000001"
            android:layout_marginTop="@dimen/xxh_dp_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            app:layout_constraintStart_toStartOf="@+id/tv_nickname"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/xxh_dp_20"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.mp.douyu.view.gridview.NineGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>