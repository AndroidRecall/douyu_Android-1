<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:layout_marginTop="@dimen/xxh_dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机用户001"
        android:layout_marginStart="@dimen/xxh_dp_10"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"/>
    <TextView
        android:id="@+id/tv_anchor_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xxh_dp_10"
        android:text="1"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/tv_user_name"
        app:layout_constraintTop_toTopOf="@+id/tv_user_name"/>
    <ImageView
        android:id="@+id/iv_anchor_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/icon_gender_man"
        android:layout_marginStart="@dimen/xxh_dp_10"
        app:layout_constraintStart_toEndOf="@+id/tv_anchor_level"
        app:layout_constraintTop_toTopOf="@+id/tv_user_name"/>
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容是什么"
        android:layout_marginTop="@dimen/xxh_dp_10"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xxh_sp_10"
        android:text="1分钟前"
        android:layout_marginTop="@dimen/xxh_dp_10"
        android:layout_marginBottom="@dimen/xxh_dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_content"/>
    <TextView
        android:id="@+id/tv_reply_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xxh_sp_12"
        tools:text="2条回复"
        android:layout_marginStart="@dimen/xxh_dp_15"
        app:layout_constraintStart_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"/>
    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/ic_star_selector"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/xxh_dp_10"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="0"
        android:textSize="12sp" />
</androidx.constraintlayout.widget.ConstraintLayout>