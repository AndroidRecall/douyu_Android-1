<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingStart="41.7dp"
                android:paddingEnd="41.7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@mipmap/icon_empty_issue"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_warning_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3.8sp"
            android:textColor="#a7a7a7"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/txt_warning_retry"
            android:layout_width="98dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:background="@drawable/bg_warning_retry"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="4.8sp"
            android:text="重新加载"
            android:textColor="#999999"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:visibility="visible"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>